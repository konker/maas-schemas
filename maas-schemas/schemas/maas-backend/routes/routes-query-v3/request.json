{
  "$id": "https://schemas.maas.global/maas-backend/routes/routes-query-v3/request.json",
  "description": "Request schema for routes query v3",
  "definitions": {
    "headers": {
      "$ref": "https://schemas.maas.global/core/components/api-common.json#/definitions/standardApiEndpointHeaders"
    },
    "routesQueryModesRaw": {
      "type": "string",
      "minLength": 1
    },
    "routesQueryMode": {
      "anyOf": [
        {
          "$ref": "https://schemas.maas.global/core/components/travel-mode.json#/definitions/personalModeSHARED_BICYCLE"
        },
        { "$ref": "https://schemas.maas.global/core/components/travel-mode.json#/definitions/personalModeWALK" },
        { "$ref": "https://schemas.maas.global/core/components/travel-mode.json#/definitions/publicTransitMode" },
        { "$ref": "https://schemas.maas.global/core/components/travel-mode.json#/definitions/privateTransitModeTAXI" }
      ]
    },
    "routesQueryParametersRaw": {
      "type": "object",
      "required": ["from", "to"],
      "properties": {
        "from": {
          "$ref": "https://schemas.maas.global/core/components/units-geo.json#/definitions/shortLocationString"
        },
        "fromName": {
          "$ref": "https://schemas.maas.global/core/components/address.json#/definitions/placeName"
        },
        "fromAddress": {
          "description": "Componentized from address",
          "allOf": [
            { "$ref": "https://schemas.maas.global/core/components/address.json#/definitions/componentAddress" }
          ]
        },
        "fromStationId": {
          "$ref": "https://schemas.maas.global/core/components/station.json#/definitions/id"
        },
        "to": {
          "$ref": "https://schemas.maas.global/core/components/units-geo.json#/definitions/shortLocationString"
        },
        "toName": {
          "$ref": "https://schemas.maas.global/core/components/address.json#/definitions/placeName"
        },
        "toAddress": {
          "description": "Componentized to address",
          "allOf": [
            { "$ref": "https://schemas.maas.global/core/components/address.json#/definitions/componentAddress" }
          ]
        },
        "toStationId": {
          "$ref": "https://schemas.maas.global/core/components/station.json#/definitions/id"
        },
        "leaveAt": {
          "$ref": "https://schemas.maas.global/core/components/units.json#/definitions/time"
        },
        "arriveBy": {
          "$ref": "https://schemas.maas.global/core/components/units.json#/definitions/time"
        },
        "leaveAtReturn": {
          "$ref": "https://schemas.maas.global/core/components/units.json#/definitions/time"
        },
        "arriveByReturn": {
          "$ref": "https://schemas.maas.global/core/components/units.json#/definitions/time"
        },
        "modes": {
          "$ref": "#/definitions/routesQueryModesRaw"
        },
        "bookingIdToExtend": {
          "description": "bookingId to fetch possible extension options for",
          "allOf": [{ "$ref": "https://schemas.maas.global/core/components/units.json#/definitions/uuid" }]
        },
        "spaceDemand": {
          "description": "Optional space demand. Example: 3 adults and 2 pieces of luggage.",
          "$ref": "https://schemas.maas.global/core/components/spaceDemand.json#/definitions/spaceDemandString"
        }
      },
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "requestContext": {
      "$ref": "https://schemas.maas.global/core/components/api-common.json#/definitions/apiGatewayAuthorizedRequestContext"
    },
    "headers": {
      "$ref": "#/definitions/headers"
    },
    "pathParameters": {
      "type": "null"
    },
    "queryStringParameters": {
      "$ref": "#/definitions/routesQueryParametersRaw"
    },
    "body": {
      "type": "null"
    }
  },
  "additionalProperties": true,
  "required": ["requestContext", "headers", "queryStringParameters"]
}
